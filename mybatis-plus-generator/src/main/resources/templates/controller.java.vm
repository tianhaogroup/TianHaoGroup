    @GetMapping("/info/{id}")
    @ApiOperation("$!{table.comment}详情")
    public BasicResponse<${entity}> info(@PathVariable("id") String id){
        try{
            if(StringUtils.isBlank(id)) {
                log.error("Parameter exception id:{}",id);
                return BasicResponseGenerator.genResult(ResponseMsgEnum.PARAM_VERIFY_FALL , "id不能为空");
            }
            ${entity} ${table.entityVariableName} = ${table.serviceVariableName}.getById(id) ;
            return BasicResponseGenerator.genResult(ResponseMsgEnum.SUCCESS , ${table.entityVariableName});
        }catch (Exception e){
            log.error("Method execution exception id:{}",id);
            return BasicResponseGenerator.genResult(ResponseMsgEnum.EXCEPTION_COMMON_FAILED , "系统繁忙");
