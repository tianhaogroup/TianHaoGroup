    @ApiOperation("配送规则保存")
    @PostMapping(value = "/save" , produces = "application/json")
    public BasicResponse<${entity}> save(@Validated @RequestBody ${table.requestName} request){
        try{
            ${entity} ${table.entityVariableName} = new ${entity}() ;
            CglibUtil.getCopier(${table.requestName}.class , ${entity}.class).copy(request , ${table.entityVariableName} , null);
            if(null == request.getId()) {
                ${table.entityVariableName}.setId(IdWorker.getId());
                #if(${table.hasStatus})
                ${table.entityVariableName}.setStatus(SystemStatus.ENABLED);
                #end
                #if(${table.hasCreateTime})
                ${table.entityVariableName}.setCreateTime(LocalDateTime.now());
                #end
            }else{
                ${table.entityVariableName}.setId(Long.valueOf(request.getId()));
            }
            ${table.serviceVariableName}.saveOrUpdate(${table.entityVariableName});
            return BasicResponseGenerator.genResult(ResponseMsgEnum.SUCCESS , ${table.entityVariableName});
